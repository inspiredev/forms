<h1>Welcome to Inspired Forms</h1>

<h2>Forms</h2>

<div class="alert"></div>
<form id="new-form" class="form" action="/" method="post">
	<h3>Create new</h3>
	<div class="form-group">
		<label for="name">Form Name</label>
		<input class="form-control" type="text" name="name"/>
	</div>
	<div class="form-group">
		<label for="from-name">Notification Email 'From' Name</label>
		<input class="form-control" type="text" name="from-name" placeholder=""/>
	</div>
	<div class="form-group">
		<label for="from-address">Notification Email 'From' Address</label>
		<input class="form-control" type="text" name="from-email" placeholder="noreply@inspiredev.co"/>
	</div>
	<div class="form-group">
		<label for="notify-subject">Notification Email Subject</label>
		<input class="form-control" type="text" name="notify-subject" placeholder="New Form Submission"/>
	</div>
	<div class="form-group">
		<label for="notify-email">Notification Email Address</label>
		<input class="form-control" type="email" name="notify-email"/>
	</div>
	<input id="new-form-submit" class="btn btn-primary" type="submit" value="Create!"/>
</form>
