<h1>Welcome to Inspired Forms</h1>

<div class="alert"></div>
<form id="new-form" class="form" action="" method="post">
	<h3>Create new</h3>
	<div class="form-group">
		<label for="name">Form Name</label>
		<input class="form-control" type="text" name="name" id="name"/>
	</div>
	<div class="form-group">
		<label for="from-name">Notification Email 'From' Name</label>
		<input class="form-control" type="text" name="from-name" id="from-name" placeholder=""/>
	</div>
	<div class="form-group">
		<label for="from-address">Notification Email 'From' Address</label>
		<input class="form-control" type="text" name="from-email" id="from-email" placeholder="noreply@inspiredev.co"/>
	</div>
	<div class="form-group">
		<label for="notify-subject">Notification Email Subject</label>
		<input class="form-control" type="text" name="notify-subject" id="notify-subject" placeholder="New Form Submission"/>
	</div>
	<div class="form-group">
		<label for="notify-email">Notification Email Address</label>
		<div class="row">
			<div class="col-sm-9">
				<input class="form-control" type="email" name="notify-email" id="notify-email"/>
			</div>
			<div class="col-sm-3">
				<select class="form-control col-sm-3" name="notify-email-type" id="notify-email-type">
					<option value="email" selected>Email</option>
					<option value="field">Field</option>
				</select>
			</div>
		</div>
	</div>
	<div class="form-group">
		<label for"notify-email-cc">Notification Email CC Address</label>
		<input class="form-control" type="email" name="notify-email-cc" id="notify-email-cc"/>
	</div>
	<div class="form-group">
		<label for="requireds">Required Fields</label>
		<input class="form-control" type="text" id="requireds" name="validation-requireds"/>
	</div>
	<input id="new-form-submit" class="btn btn-primary" type="submit" value="Create!"/>
</form>
