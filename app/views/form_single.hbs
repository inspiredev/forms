<h1>Form</h1>
<div class="alert"></div>
<form id="edit-form" class="form" action="/forms" method="post">
	{{debug this}}
	<h2>Edit Form</h2>
	<div class="form-group">
		<label for="name">Form Name</label>
		<input class="form-control" type="text" name="name" value="{{name}}"/>
	</div>
	<div class="form-group">
		<label for="from-name">Notification Email 'From' Name</label>
		<input class="form-control" type="text" name="from-name" value="{{fromName}}"/>
	</div>
	<div class="form-group">
		<label for="from-address">Notification Email 'From' Address</label>
		<input class="form-control" type="text" name="from-email" placeholder="noreply@inspiredev.co" value="{{fromEmail}}"/>
	</div>
	<div class="form-group">
		<label for="notify-subject">Notification Email Subject</label>
		<input class="form-control" type="text" name="notify-subject" placeholder="New Form Submission" value="{{notifySubject}}"/>
	</div>
	<div class="form-group">
		<label for="notify-email">Notification Email Address</label>
		<input class="form-control" type="email" name="notify-email" value="{{notifyEmail}}"/>
	</div>
	<div class="field-group">
		<label>Number of entries</label>
		<div>{{entries.length}}</div>
	</div>
	<input id="edit-form-submit" class="btn btn-primary" type="submit" value="Save"/>
</form>